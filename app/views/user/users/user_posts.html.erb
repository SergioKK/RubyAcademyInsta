<h1><%= "#{@user.nickname} page" %></h1>

<% unless current_user_check(@user) %>
  <% if current_user_is_following(current_user.id, @user.id) %>
    <%= link_to 'Unfollow', unfollow_user_path(nickname: @user.nickname), id: 'unfollow-button', remote: true, method: :post %>
  <% else %>
    <%= link_to 'Follow', follow_user_path(nickname: @user.nickname), id: 'follow-button', remote: true, method: :post %>
  <% end %>
<% end %>

<%= render partial: "user/users/user_posts", locals: { user: @user, posts: @posts } %>
