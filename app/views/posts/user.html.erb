<h1><%= @user.email %></h1><br>

<table style="width:100%">
  <thead>
  <td>Title</td>
  <td>Content</td>
  <td>Image</td>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.image ? image_tag(post.image_url, class: "img-responsive", alt: "rss feed", height: 200, width: 200) : "Have no image" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


